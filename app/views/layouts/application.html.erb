<!DOCTYPE html>
<html>
<head>
  <title>Blocmetrics</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <li class="btn btn-primary"><%= link_to "Home", welcome_index_path %></li>


      <% if user_signed_in? %>
      <li class="btn btn-success"><%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> </li>
      <li class="btn btn-warning"> <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %> </li>
      <% else %>
      <li class="btn btn-success"><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> </li>
      <li class="btn btn-warning"><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %></li>
      <% end %>
    </ul>

    <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
    <% elsif flash[:alert] %>
    <div class="alert alert-warning">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
    </div>
    <% end %>

      <%= yield %>
    </div>
  </body>
  </html>

<h1 class="center">My Applications</h1>

<div class"row">

  <div class="col-md-10">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Application</th>
        </tr>
      </thead>
      <tbody>
        <% @applications.each do |application| %>
        <tr>
          <td class="form-group">
            <%= link_to application.name, user_application_path(current_user, application) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-2">
    <%= link_to "New Application", new_user_application_path(current_user), class: 'btn btn-success' %>
  </div>

</div>
